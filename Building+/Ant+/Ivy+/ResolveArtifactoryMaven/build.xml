<project name="ResolveArtifactoryMaven"
         default="dist" basedir="."
         xmlns:ivy="antlib:org.apache.ivy.ant">

    <property name="src" location="src"/>
    <property name="build" location="build"/>
    <property name="dist" location="dist"/>

    <target name="clean" description="clean up">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>

    <target name="init" depends="clean">
        <tstamp/>
        <property name="version" value="1.0.0"/>
        <mkdir dir="${build}"/>
    </target>

    <ivy:settings file="${basedir}/ivysettings.xml"/>

    <target name="resolve" depends="init">
        <ivy:cachepath pathid="ivy.classpath"/>
    </target>

    <target name="compile" depends="resolve">
        <javac srcdir="${src}" destdir="${build}" classpathref="ivy.classpath" includeantruntime="false"/>
    </target>

    <target name="dist" depends="compile">
        <mkdir dir="${dist}"/>
        <jar jarfile="${dist}/${ant.project.name}-${version}.jar" basedir="${build}"/>
    </target>

</project>