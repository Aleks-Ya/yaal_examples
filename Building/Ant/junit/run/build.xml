<?xml version="1.0" encoding="windows-1251"?>
<project name="Ant Junit Run" basedir=".">
    <property name="src.dir.product" value="src"/>
    <property name="classes.dir.product" value="classes"/>

    <target name="clean">
        <delete dir="${classes.dir.product}"/>
    </target>

    <target name="compile" depends="clean">
        <mkdir dir="${classes.dir.product}"/>
        <javac srcdir="${src.dir.product}" destdir="${classes.dir.product}"/>
    </target>

</project>