<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="QuestionHBox" prefHeight="87.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gptui.ui.controller.QuestionController">
    <children>
        <Label fx:id="questionLabel" text="Question:" />
        <Separator orientation="VERTICAL" prefHeight="200.0" visible="false" />
        <TextArea fx:id="questionTextArea" onKeyTyped="#keyTypedQuestionTextArea" prefHeight="137.0" prefWidth="1154.0" HBox.hgrow="ALWAYS" />
        <Separator orientation="VERTICAL" prefHeight="200.0" visible="false" />
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <Button fx:id="questionButton" mnemonicParsing="false" onAction="#sendQuestion" text="Question" />
                <Separator prefWidth="200.0" visible="false" />
                <Button fx:id="definitionButton" mnemonicParsing="false" onAction="#sendDefinition" text="Definition" />
            <Separator prefWidth="200.0" visible="false" />
            <Button fx:id="grammarButton" mnemonicParsing="false" onAction="#sendGrammar" text="Grammar" />
            </children>
        </VBox>
    </children>
</HBox>
