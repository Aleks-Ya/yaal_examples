<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="QuestionHBox" prefHeight="64.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gptui.ui.controller.QuestionController">
   <children>
      <Label fx:id="questionLabel" text="Question:" />
      <Separator orientation="VERTICAL" prefHeight="200.0" visible="false" />
      <TextArea fx:id="questionTextArea" onKeyTyped="#keyTypedQuestionTextArea" prefHeight="68.0" prefWidth="1154.0" HBox.hgrow="ALWAYS" />
      <Separator orientation="VERTICAL" prefHeight="200.0" visible="false" />
      <Button fx:id="sendQuestionButton" mnemonicParsing="false" onAction="#sendQuestion" text="Send" />
   </children>
</HBox>
