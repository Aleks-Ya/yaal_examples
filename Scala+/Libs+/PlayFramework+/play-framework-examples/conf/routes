GET    /                            controllers.HomeController.index
GET    /text/get                    controllers.GetPlainTextController.text
POST   /json                        controllers.PostJsonController.json
GET    /error/bad                   controllers.ErrorStatusController.badRequest
GET    /error/server                controllers.ErrorStatusController.serverError

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
