GET    /                            controllers.HomeController.index()
GET    /sync/get/text               controllers.GetPlainTextSyncController.text()
GET    /async/text/get              controllers.GetPlainTextAsyncController.text()
POST   /sync/post/json              controllers.PostJsonSyncController.json()
GET    /sync/error/bad              controllers.ErrorStatusSyncController.badRequest()
GET    /sync/error/server           controllers.ErrorStatusSyncController.serverError()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
